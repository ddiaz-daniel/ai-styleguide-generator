<script src="/templates/page/kistyleguide/ki_style_guide/ins_target_groups/insTargetGroups.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flag-icon-css/css/flag-icon.min.css">

<div class="slidesHeader">
    <h1 class="sliderTitle">{{ i18n.kiStyleguide.tabs.targetGroups }}</h1>
    <span class="sliderSubtitle">{{ i18n.kiStyleguide.targetGroups.explanation }}</span>
</div>

<div id="target-groups" class="elements">
    <div class="element">
        <label id="selectGenders" for="genders[]">
            <div id="genderButtonsContainer">
                <div class="genderButton" data-gender="male">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                         transform="rotate(45)">
                        <path d="M12 11C9.23858 11 7 13.2386 7 16C7 18.7614 9.23858 21 12 21C14.7614 21 17 18.7614 17 16C17 13.2386 14.7614 11 12 11ZM12 11V3M12 3L16 7M12 3L8 7"
                              stroke-width="1.5"></path>
                    </svg>
                    <span>{{ i18n.kiStyleguide.targetGroups.genders.male }}</span>
                </div>
                <div class="genderButton" data-gender="female">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 18H15M12 13V21M12 13C14.7614 13 17 10.7614 17 8C17 5.23858 14.7614 3 12 3C9.23858 3 7 5.23858 7 8C7 10.7614 9.23858 13 12 13Z"
                              stroke-width="1.5"></path>
                    </svg>
                    <span>{{ i18n.kiStyleguide.targetGroups.genders.female }}</span>
                </div>
                <div class="genderButton" data-gender="non-binary">
                    <svg viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
                        <path d="M136,88.42383V59.01465l23.25049,15.625a7.99987,7.99987,0,1,0,8.9248-13.2793L142.34253,44l25.83276-17.36035a7.99987,7.99987,0,1,0-8.9248-13.2793L128,34.36133l-31.25049-21.001a7.99987,7.99987,0,1,0-8.9248,13.2793L113.65747,44,87.82471,61.36035a7.99987,7.99987,0,1,0,8.9248,13.2793L120,59.01465V88.42383a76,76,0,1,0,16,0ZM128,224a60,60,0,1,1,60-60A60.06812,60.06812,0,0,1,128,224Z"
                              stroke-width="1.5"></path>
                    </svg>
                    <span>{{ i18n.kiStyleguide.targetGroups.genders.nonBinary }}</span>
                </div>
                <div class="genderButton" data-gender="transgender">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.5 14.6667C14.8012 14.6667 16.6667 12.8012 16.6667 10.5C16.6667 9.562 16.3567 8.69638 15.8336 8C15.7067 7.83105 15.5673 7.67205 15.4167 7.5244M12.5 14.6667C10.1988 14.6667 8.33333 12.8012 8.33333 10.5C8.33333 9.33442 8.81193 8.28062 9.58333 7.5244M12.5 14.6667V18M12.5 20.9167V18M12.5 18H9.58333M12.5 18H15.4167M20 3H16.5M20 3V6.5M20 3L15.4167 7.5244M15.4167 7.5244C14.6651 6.78763 13.6356 6.33333 12.5 6.33333C11.3644 6.33333 10.3349 6.78763 9.58333 7.5244M9.58333 7.5244L8 6M5 3H8M5 3V6M5 3L8 6M8 6L6 8M8 6L10 4"
                              stroke-width="1.5"></path>
                    </svg>
                    <span>{{ i18n.kiStyleguide.targetGroups.genders.transgender }}</span>
                </div>
                <div class="genderButton" data-gender="all-gender-inclusive">
                    <svg viewBox="0 0 24 24" stroke="#7d7d7d" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" fill="none" r="6"
                                stroke-width="1.5"></circle>
                    </svg>
                    <span>{{ i18n.kiStyleguide.targetGroups.genders.other }}</span>
                </div>
            </div>
            <input type="text" name="genders[]" id="selectedGendersInput" style="display: none">
        </label>
    </div>

    <div class="element">
        <label>{{ i18n.kiStyleguide.targetGroups.age }}</label>
        <div class="ageSlider" id="slider-distance-age">
            <div>
                <div inverse-left style="width:70%;"></div>
                <div inverse-right style="width:70%;"></div>
                <div range style="left:0%;right:0%;"></div>
                <span thumb style="left:0%;"></span>
                <span thumb style="left:100%;"></span>
                <div sign style="left:0%;">
                    <span id="value">0</span>
                </div>
                <div sign style="left:100%;">
                    <span id="value">130</span>
                </div>
            </div>
            <input type="range" name="minAge" value="0" max="130" min="0" step="1" oninput="
  this.value=Math.min(this.value,this.parentNode.childNodes[5].value-1);
  let value = (this.value/parseInt(this.max))*100
  var children = this.parentNode.childNodes[1].childNodes;
  children[1].style.width=value+'%';
  children[5].style.left=value+'%';
  children[7].style.left=value+'%';children[11].style.left=value+'%';
  children[11].childNodes[1].innerHTML=this.value;"/>

            <input type="range" name="maxAge" value="130" max="130" min="0" step="1" oninput="
  this.value=Math.max(this.value,this.parentNode.childNodes[3].value-(-1));
  let value = (this.value/parseInt(this.max))*100
  var children = this.parentNode.childNodes[1].childNodes;
  children[3].style.width=(100-value)+'%';
  children[5].style.right=(100-value)+'%';
  children[9].style.left=value+'%';children[13].style.left=value+'%';
  children[13].childNodes[1].innerHTML=this.value;"/>
        </div>
    </div>

    <div class="element">
        <label>{{ i18n.kiStyleguide.targetGroups.income }}</label>
        <div class="incomeSlider" id="slider-distance-income">
            <div>
                <div inverse-left style="width:70%;"></div>
                <div inverse-right style="width:70%;"></div>
                <div range style="left:0%;right:0%;"></div>
                <span thumb style="left:0%;"></span>
                <span thumb style="left:100%;"></span>
                <div sign style="left:0%;">
                    <span id="value">0</span>
                </div>
                <div sign style="left:100%;">
                    <span id="value">9900</span>
                </div>
            </div>
            <input type="range" name="minIncome" value="0" max="9900" min="0" step="100" oninput="
  this.value=Math.min(this.value,this.parentNode.childNodes[5].value-100);
  let value = (this.value/parseInt(this.max))*100
  var children = this.parentNode.childNodes[1].childNodes;
  children[1].style.width=value+'%';
  children[5].style.left=value+'%';
  children[7].style.left=value+'%';children[11].style.left=value+'%';
  children[11].childNodes[1].innerHTML=this.value;"/>

            <input type="range" name="maxIncome" value="9900" max="9900" min="0" step="100" oninput="
this.value=Math.max(this.value,this.parentNode.childNodes[3].value-(-100));
let value = (this.value/parseInt(this.max))*100
var children = this.parentNode.childNodes[1].childNodes;
children[3].style.width=(100-value)+'%';
children[5].style.right=(100-value)+'%';
children[9].style.left=value+'%';children[13].style.left=value+'%';
children[13].childNodes[1].innerHTML=this.value;"/>
        </div>
    </div>

    <div class="element half">
        <label>
            <span>{{ i18n.kiStyleguide.targetGroups.educationSelect }}</span>
            <br>
            <div id="displaySelectedEducations" class="selected-options"></div>
            <select name="educations[]" multiple onChange="displayNewEducationSelection()"
                    id="kiStyleguideTargetEducations">
                {% for code, education in i18n.kiStyleguide.targetGroups.educations %}
                    <option value="{{ education }}">{{ education }}</option>
                {% endfor %}
            </select>
        </label>

        <label>
            <span>{{ i18n.kiStyleguide.targetGroups.vulnerablePeopleSelect }}</span>
            <br>
            <div id="displaySelectedVulnerablePeople" class="selected-options"></div>
            <select name="vulnerablePeople[]" multiple onChange="displayNewVulnerablePeopleSelection()"
                    id="kiStyleguideTargetVulnerablePeople">
                {% for code, vulnerablePeople in i18n.kiStyleguide.targetGroups.vulnerablePeople %}
                    <option value="{{ vulnerablePeople }}">{{ vulnerablePeople }}</option>
                {% endfor %}
            </select>
        </label>

        <label>
            <span>{{ i18n.kiStyleguide.targetGroups.maritalStatusSelect }}</span>
            <br>
            <div id="displaySelectedMaritalStatus" class="selected-options"></div>
            <select name="maritalStatuses[]" multiple onChange="displayNewMaritalStatusSelection()"
                    id="kiStyleguideTargetMaritalStatus">
                {% for code, maritalStatus in i18n.kiStyleguide.targetGroups.maritalStatuses %}
                    <option value="{{ maritalStatus }}">{{ maritalStatus }}</option>
                {% endfor %}
            </select>
        </label>
    </div>

    <div class="element half">
        <label>
            <span>{{ i18n.form.country }}</span>
            <br>
            <div id="displaySelectedCountries" class="selected-options"></div>
            <select name="countries[]" multiple onChange="displayNewCountrySelection()"
                    id="kiStyleguideTargetCountries">
                {% for code, country in i18n.countries %}
                    <option value="{{ code }}">
                        {{ country }} {{ code }}
                    </option>
                {% endfor %}
            </select>
        </label>

        <label>
            <span>{{ i18n.kiStyleguide.targetGroups.languageSelect }}</span>
            <br>
            <div id="displaySelectedLanguages" class="selected-options">
                {# <span class="selected-option">English</span> #}
            </div>
            <select name="languages[]" multiple onChange="displayNewLanguageSelection()"
                    id="kiStyleguideTargetLanguages">
                {% for code, language in i18n.kiStyleguide.targetGroups.languages %}
                    <option value="{{ language }}">{{ language }}</option>
                {% endfor %}
            </select>
        </label>
    </div>
</div>
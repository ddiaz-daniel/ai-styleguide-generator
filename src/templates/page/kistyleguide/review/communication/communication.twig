<link rel="stylesheet" href="./templates/page/kistyleguide/review/communication/communication.scss">
<div class="communication-container pdf-content">
    {% include "page/kistyleguide/review/prompt_button/promptButton.twig" with {section: "communication"} %}

    <div class="left-side">
        <h3 class="section-title">Communication</h3>
        <p class="section-note">{{ kiStyleguide.communication.tone }}</p>

    </div>
    <div class="right-side">
        <div class="sample-text">
            <ul class="promotion-methods-list">
                {% for key, sampleText in kiStyleguide.communication.sampleText %}
                    <li class="sample-container">
                        <h5 class="secondary-title"> {{ key }}</h5>
                        <hr class="gray-line">
                        <p class="sample-text-type">{{ sampleText }}</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <h4 class="promotion-methods-title">Promotional Methods</h4>
        <ul class="promotion-methods-list">
            {% for method in kiStyleguide.communication.promotionMethods %}
                <div class="promotion-method">{{ method }}</div>
            {% endfor %}
        </ul>
    </div>
</div>
